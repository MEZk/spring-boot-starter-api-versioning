<?xml version="1.0"?>
<!DOCTYPE import-control PUBLIC
        "-//Checkstyle//DTD ImportControl Configuration 1.4//EN"
        "https://checkstyle.org/dtds/import_control_1_4.dtd">

<import-control pkg="io.github.mezk.spring.boot.starters.api.versioning">
    <allow pkg="org.junit"/>
    <allow pkg="org.mockito"/>
    <allow pkg="java.util"/>

    <subpackage name="configuration">
        <allow class="java.lang.reflect.Method"/>

        <allow class="org.springframework.web.bind.annotation.RequestMapping"/>
        <allow class="org.springframework.web.servlet.mvc.method.RequestMappingInfo"/>

        <allow class="io.github.mezk.spring.boot.starters.api.versioning.annotations.ApiVersion"/>
    </subpackage>

    <subpackage name="annotations">
        <allow class="org.springframework.core.type.AnnotationMetadata"/>

        <allow class="io.github.mezk.spring.boot.starters.api.versioning.configuration.ApiVersioningAnnotationAutoConfiguration"/>
    </subpackage>

</import-control>